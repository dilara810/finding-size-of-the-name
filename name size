#include <stdio.h>
#include <stdlib.h>

/* Write a function that finds the length of a string. */

int fin_size_arr(char *arr)
{
	int i=0;
	
	while(*(arr+i) != '\0' )
	{
		i++;
	}
	
	return i;
	
}


int main(int argc, char *argv[]) 
{
	char *name;
	printf("Please enter a name to find its size: ");
	scanf("%s",&name);
	
	printf(" size of the name is  %d ",fin_size_arr(&name));
	
	
	return 0;
}
